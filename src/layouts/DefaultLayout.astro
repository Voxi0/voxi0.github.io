---
import {SITE_TITLE, SITE_DESC} from "../constants.ts";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title, desc } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta tags -->
    <!-- Basics -->
		<meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="generator" content={Astro.generator}/>
    <meta name="description" content={Astro.props.desc ?? SITE_DESC}/>

    <!-- Opengraph -->
    <meta property="og:title" content={title ? `${SITE_TITLE} - ${title}` : SITE_TITLE}/>
    <meta property="og:description" content={Astro.props.description ?? SITE_DESC}/>
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://voxi0.github.io/"/>
    <meta property="og:image" content="/social-preview.png"/>

    <!-- Preload/Prefetch assets -->
    <link rel="preload" href="/fonts/roboto-slab/RobotoSlab-Regular.woff2" as="font" type="font/woff2" crossorigin/>

    <!-- SEO -->
    <link rel="canonical" href="https://voxi0.github.io/"/>
    <link rel="sitemap" href="/sitemap-index.xml"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>

    <!-- Website title -->
    <title>{title ? `${SITE_TITLE} - ${title}` : `${SITE_TITLE}`}</title>
	</head>
  <body>
    <Header/>
    <slot/>
    <Footer/>
	</body>
</html>

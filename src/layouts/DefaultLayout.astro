---
import "../styles/global.css";
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta tags -->
		<meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <meta name="description" content="My personal website"/>

    <!-- Preload assets -->
    <link rel="preload" href="/fonts/Yarndings20-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous"/>
    <link rel="preload" href="/fonts/roboto-slab/RobotoSlab-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous"/>

    <!-- Favicon and stylesheet -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>

    <!-- Website title -->
    <title>{title}</title>
	</head>
	<body>
		<slot/>
	</body>
</html>
